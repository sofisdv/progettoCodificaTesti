                    <lb n="14" facs="#p60_l14" xml:id="p60_lb14" break="no" rend="double_stroke"/>
                    mobile prima, a piedi poi, precedendo il
                    <lb n="15" facs="#p60_l15" xml:id="p60_lb15"/>
