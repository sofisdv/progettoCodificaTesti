                    <lb n="12" facs="#p60_l12" xml:id="p60_lb12"/>
                    di <name type="place" ref="#BB">Bobbio</name>. <name type="person" ref="#FBA">Barca</name> con alcuni ufficiali
                    <lb n="13" facs="#p60_l13" xml:id="p60_lb13"/>
